@model WebApp.ViewModel.ProdottoVM

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inserimento Prodotto</title>
</head>
<body>
    <h1>Inserimento Prodotto</h1>
    <div class="col-lg-6">
        <div class="row">
            <form asp-action="AggiungiProdotto" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-12 mt-4">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-12 mt-4 form-control">
                    <label asp-for="Immagine" class="control-label"></label>
                    <input asp-for="Immagine" class="form-control" required />
                    <span asp-validation-for="Immagine" class="text-danger"></span>
                </div>
                <div class="col-12 mt-4 ">
                    <label asp-for="Descrizione" class="control-label"></label>
                    <textarea asp-for="Descrizione" class="form-control" required>
                        </textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span>
                </div>

                <div class="d-flex row">
                    <div class="col-6 mt-4">
                        <label asp-for="Prezzo" class="control-label"></label>
                        <input asp-for="Prezzo" class="form-control" required />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>

                    <div class="col-6 mt-4">
                        <label asp-for="Quantita" class="control-label"> Quantita </label>
                        <input asp-for="Quantita" class="form-control" min="0" type="number" required />
                        <span asp-validation-for="Quantita" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <label asp-for="Categoria" class="control-label"></label>
                    <select asp-for="Categoria" class="form-control" required>
                        <option value="Maglia">Maglia</option>
                        <option value="Pantalone">Pantalone</option>
                        <option value="Giacca">Giacca</option>
                        <option value="Felpa">Felpa</option>
                        <option value="Camicia">Camicia</option>
                        <option value="Maglione">Maglione</option>
                        <option value="Tuta">Tuta</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>

                <div class="col-12 mt-4">
                    <label asp-for="Taglia" class="control-label"></label>
                    <select asp-for="Taglia" class="form-control" required>
                        <option value="XXS">XXS</option>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                        <option value="XXL">XXL</option>
                    </select>
                    <span asp-validation-for="Taglia" class="text-danger"></span>
                </div>

                <div class="col-12 mt-4">
                    <label asp-for="Colore" class="control-label"></label>
                    <input asp-for="Colore" class="form-control" required />
                    <span asp-validation-for="Colore" class="text-danger"></span>
                </div>

                <div class="col-12 mt-4">
                    <input class="mt-2 btn btn-outline-dark w-100" type="submit" value="Crea" />
                    <a asp-controller="Prodotto" asp-action="AggiungiProdotto"></a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>